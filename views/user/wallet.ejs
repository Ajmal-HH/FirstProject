              <input
                class="form-control mr-sm-2"
                type="text"
                placeholder="Search"
                aria-label="Search"
                name="search"
              />
              <button
                type="submit"
                class="ms-1 bg-light"
                style="
                  border: 1px solid rgb(227, 227, 227);
                  border-radius: 5px;
                  padding: 5px;
                "
                value="search"
